{
  "sources": {
    "bing": {
      "name": "Bing Daily",
      "description": "Microsoft Bing daily wallpapers",
      "enabled": true,
      "api_url": "https://www.bing.com/HPImageArchive.aspx?format=js&idx=0&n=1&mkt=en-US",
      "headers": {},
      "response_mapping": {
        "data_path": "images.0",
        "title_keys": [
          "title"
        ],
        "description_keys": [
          "copyright"
        ],
        "image_url_keys": [
          "url"
        ],
        "image_url_prefix": "https://www.bing.com",
        "thumbnail_url_keys": [
          "url"
        ],
        "thumbnail_transform": {
          "type": "replace",
          "find": "1920x1080",
          "replace": "480x270"
        }
      },
      "validation": {
        "required_fields": [
          "images"
        ]
      }
    },
    "reddit": {
      "name": "Reddit Wallpapers",
      "description": "Top wallpapers from r/wallpaper",
      "enabled": true,
      "api_url": "https://www.reddit.com/r/wallpaper/top.json?t=day&limit=1",
      "headers": {
        "User-Agent": "PardusGnomeGreeter/1.0 (https://github.com/pardus/pardus-gnome-greeter)"
      },
      "response_mapping": {
        "data_path": "data.children.0.data",
        "title_keys": [
          "title"
        ],
        "description_keys": [
          "subreddit_name_prefixed"
        ],
        "image_url_keys": [
          "url"
        ],
        "thumbnail_url_keys": [
          "thumbnail"
        ],
        "image_url_prefix": ""
      },
      "validation": {
        "required_fields": [
          "data.children"
        ]
      }
    },
    "nasa": {
      "name": "NASA APOD",
      "description": "NASA Astronomy Picture of the Day - Nasa Daily",
      "enabled": true,
      "api_url": "https://api.nasa.gov/planetary/apod?api_key=DEMO_KEY",
      "headers": {
        "User-Agent": "PardusGnomeGreeter/1.0 (https://github.com/pardus/pardus-gnome-greeter) Python/requests"
      },
      "rate_limit": {
        "requests_per_hour": 30,
        "retry_delay": 60
      },
      "response_mapping": {
        "data_path": "",
        "title_keys": [
          "title"
        ],
        "description_keys": [
          "explanation"
        ],
        "image_url_keys": [
          "hdurl",
          "url"
        ],
        "thumbnail_url_keys": [
          "url"
        ],
        "image_url_prefix": ""
      },
      "validation": {
        "required_fields": [
          "url",
          "media_type"
        ],
        "media_type_check": "image"
      }
    },
    "wallhaven": {
      "name": "Wallhaven Daily",
      "description": "Top community wallpapers from Wallhaven",
      "enabled": true,
      "api_url": "https://wallhaven.cc/api/v1/search?sorting=toplist&topRange=1d&atleast=1920x1080&categories=100&purity=100",
      "headers": {},
      "response_mapping": {
        "data_path": "data.0",
        "title_keys": [
          "id"
        ],
        "description_keys": [
          "resolution"
        ],
        "image_url_keys": [
          "path"
        ],
        "thumbnail_url_keys": [
          "thumbs.large"
        ],
        "image_url_prefix": ""
      },
      "validation": {
        "required_fields": [
          "data"
        ]
      }
    },
    "wikipedia": {
      "name": "Wikipedia POTD",
      "description": "Wikipedia Picture of the Day",
      "enabled": true,
      "api_url": "https://en.wikipedia.org/api/rest_v1/feed/featured/{year}/{month:02d}/{day:02d}",
      "headers": {
        "User-Agent": "PardusGnomeGreeter/1.0 (https://github.com/pardus/pardus-gnome-greeter) Python/requests"
      },
      "response_mapping": {
        "data_path": "image",
        "title_keys": [
          "title"
        ],
        "description_keys": [
          "description.text"
        ],
        "image_url_keys": [
          "image.source"
        ],
        "thumbnail_url_keys": [
          "thumbnail.source"
        ],
        "image_url_prefix": "",
        "title_transform": {
          "type": "remove_prefix",
          "prefix": "File:"
        }
      },
      "validation": {
        "required_fields": [
          "image"
        ],
        "image_check": "image.image.source"
      }
    }
  }
}