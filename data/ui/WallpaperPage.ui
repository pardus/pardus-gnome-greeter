<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0" />
  <requires lib="adw" version="1.0" />
  <template class="WallpaperPage" parent="AdwPreferencesPage">
    <property name="title">Wallpaper</property>
    <property name="icon-name">image-x-generic-symbolic</property>

    <!-- GNOME-style: AdwClamp wraps entire page -->
    <child>
      <object class="AdwClamp">
        <property name="maximum-size">580</property>
        <property name="tightening-threshold">550</property>
        <property name="hexpand">true</property>
        <child>
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <property name="spacing">0</property>
            <property name="hexpand">true</property>
            <property name="vexpand">true</property>
            
            <!-- Background PreferencesGroup inside Clamp -->
            <child>
              <object class="AdwPreferencesGroup">
                <property name="title">Background</property>
                <property name="description">Choose your wallpaper from the collection below</property>

                <!-- Current Wallpaper Info -->
                <child>
                  <object class="AdwActionRow" id="current_wallpaper_row">
                    <property name="title">Current Wallpaper</property>
                    <property name="subtitle">Loading...</property>
                    <child type="prefix">
                      <object class="GtkImage" id="current_wallpaper_preview">
                        <property name="icon-name">image-x-generic-symbolic</property>
                        <property name="pixel-size">48</property>
                        <style>
                          <class name="card" />
                        </style>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
            
            <!-- Wallpaper Grid Container -->
            <child>
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="spacing">0</property>
                <property name="hexpand">true</property>
                <property name="vexpand">true</property>
                <style>
                  <class name="wallpaper-container"/>
                </style>
                
                <!-- Section Label -->
                <child>
                  <object class="GtkBox">
                    <property name="orientation">horizontal</property>
                    <property name="margin-top">24</property>
                    <property name="margin-bottom">12</property>
                    <child>
                      <object class="GtkLabel">
                        <property name="label">Choose your wallpaper from the collection below</property>
                        <property name="halign">start</property>
                        <property name="hexpand">true</property>
                        <style>
                          <class name="dim-label"/>
                        </style>
                      </object>
                    </child>
                  </object>
                </child>
                
                <!-- Wallpaper Grid -->
                <child>
                  <object class="GtkScrolledWindow" id="wallpapers_scrolled">
                    <property name="hexpand">true</property>
                    <property name="vexpand">true</property>
                    <property name="hscrollbar-policy">never</property>
                    <property name="vscrollbar-policy">automatic</property>
                    <property name="margin-top">0</property>
                    <property name="margin-bottom">12</property>
                    <style>
                      <class name="card"/>
                    </style>
                    <child>
                      <object class="GtkFlowBox" id="wallpapers_flowbox">
                        <property name="hexpand">true</property>
                        <property name="vexpand">true</property>
                        <property name="halign">fill</property>
                        <property name="valign">fill</property>
                        <property name="column-spacing">12</property>
                        <property name="row-spacing">12</property>
                        <property name="margin-top">16</property>
                        <property name="margin-bottom">16</property>
                        <property name="margin-start">16</property>
                        <property name="margin-end">16</property>
                        <property name="selection-mode">single</property>
                        <property name="homogeneous">false</property>
                        <property name="min-children-per-line">1</property>
                        <property name="max-children-per-line">4</property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface> 