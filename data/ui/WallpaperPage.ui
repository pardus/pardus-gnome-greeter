<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0" />
  <requires lib="adw" version="1.0" />
  <template class="WallpaperPage" parent="AdwPreferencesPage">
    <property name="title">Wallpaper</property>
    <property name="icon-name">image-x-generic-symbolic</property>
    <child>
      <object class="GtkScrolledWindow">
        <property name="hscrollbar-policy">never</property>
        <property name="vscrollbar-policy">automatic</property>
        <child>
          <object class="AdwClamp">
            <property name="margin-top">0</property>
            <child>
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="margin-bottom">24</property>
                <property name="margin-start">24</property>
                <property name="margin-end">24</property>
                <child>
                  <object class="AdwPreferencesGroup">
                    <property name="title">Background</property>
                    <property name="description">Choose your wallpaper from the collection below</property>
                    <child>
                      <object class="AdwActionRow" id="current_wallpaper_row">
                        <property name="title">Current Wallpaper</property>
                        <property name="subtitle">Loading...</property>
                        <child type="prefix">
                          <object class="GtkImage" id="current_wallpaper_preview">
                            <property name="icon-name">image-x-generic-symbolic</property>
                            <property name="pixel-size">48</property>
                            <style>
                              <class name="card" />
                            </style>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="GtkFlowBox" id="wallpapers_flowbox">
                    <property name="hexpand">true</property>
                    <property name="vexpand">true</property>
                    <property name="halign">fill</property>
                    <property name="valign">fill</property>
                    <property name="column-spacing">12</property>
                    <property name="row-spacing">12</property>
                    <property name="selection-mode">single</property>
                    <property name="homogeneous">false</property>
                    <property name="min-children-per-line">1</property>
                    <property name="max-children-per-line">3</property>
                    <style>
                      <class name="card" />
                    </style>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface> 