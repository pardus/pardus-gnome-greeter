<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0" />
  <requires lib="adw" version="1.0" />
  <template class="WallpaperPage" parent="AdwPreferencesPage">
    <property name="title" translatable="yes">Wallpaper</property>
    <property name="icon-name">image-x-generic-symbolic</property>
    
    <!-- Wallpaper Type Selection -->
    <child>
      <object class="AdwPreferencesGroup">
        <child>
          <object class="AdwActionRow" id="wallpaper_type_switcher_row">
            <property name="title" translatable="yes">Wallpaper Type</property>
            <property name="subtitle" translatable="yes">Select between static images or live wallpapers</property>
            <child type="suffix">
              <object class="AdwToggleGroup" id="wallpaper_type_toggle_group">
                <property name="valign">center</property>
                <property name="homogeneous">true</property>
                
                <!-- Static Toggle -->
                <child>
                  <object class="AdwToggle" id="static_toggle">
                    <property name="name">static</property>
                    <property name="label" translatable="yes">_Static</property>
                    <property name="use-underline">true</property>
                  </object>
                </child>
                
                <!-- Live Toggle -->
                <child>
                  <object class="AdwToggle" id="live_toggle">
                    <property name="name">live</property>
                    <property name="label" translatable="yes">_Live</property>
                    <property name="use-underline">true</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
    
    <!-- Content Stack -->
    <child>
      <object class="AdwPreferencesGroup" id="content_group">
        <child>
          <object class="GtkStack" id="content_stack">
            <property name="transition-type">slide-left-right</property>
            <property name="transition-duration">200</property>
            
            <!-- Static Wallpapers View -->
            <child>
              <object class="GtkStackPage">
                <property name="name">static</property>
                <property name="child">
                  <object class="GtkScrolledWindow">
                    <property name="hscrollbar-policy">never</property>
                    <property name="vscrollbar-policy">automatic</property>
                    <property name="vexpand">true</property>
                    <property name="max-content-height">400</property>
                    <property name="propagate-natural-height">true</property>
                    <property name="child">
                      <object class="GtkFlowBox" id="wallpapers_flowbox">
                        <property name="halign">center</property>
                        <property name="valign">start</property>
                        <property name="column-spacing">16</property>
                        <property name="row-spacing">16</property>
                        <property name="selection-mode">single</property>
                        <property name="homogeneous">true</property>
                        <property name="min-children-per-line">3</property>
                        <property name="max-children-per-line">5</property>
                        <property name="activate-on-single-click">true</property>
                        <property name="margin-top">12</property>
                        <property name="margin-bottom">12</property>
                        <property name="margin-start">12</property>
                        <property name="margin-end">12</property>
                        <style>
                          <class name="background-flowbox"/>
                        </style>
                      </object>
                    </property>
                  </object>
                </property>
              </object>
            </child>
            
            <!-- Live Wallpapers View -->
            <child>
              <object class="GtkStackPage">
                <property name="name">live</property>
                <property name="child">
                  <object class="GtkScrolledWindow">
                    <property name="hscrollbar-policy">never</property>
                    <property name="vscrollbar-policy">automatic</property>
                    <property name="vexpand">true</property>
                    <property name="max-content-height">400</property>
                    <property name="propagate-natural-height">true</property>
                    <property name="child">
                      <object class="GtkBox" id="live_wallpaper_settings">
                        <property name="orientation">vertical</property>
                        <property name="spacing">6</property>
                        <property name="margin-top">12</property>
                        <property name="margin-bottom">12</property>
                        <property name="margin-start">12</property>
                        <property name="margin-end">12</property>
                        
                        <!-- Enable Live Wallpapers -->
                        <child>
                          <object class="AdwPreferencesGroup">
                            <child>
                              <object class="AdwActionRow" id="enable_live_wallpaper_row">
                                <property name="icon-name">preferences-desktop-wallpaper-symbolic</property>
                                <property name="title" translatable="yes">Enable Daily Wallpapers</property>
                                <property name="subtitle" translatable="yes">Automatically download and set new wallpapers daily</property>
                                <property name="activatable-widget">live_wallpaper_switch</property>
                                <child type="suffix">
                                  <object class="GtkSwitch" id="live_wallpaper_switch">
                                    <property name="valign">center</property>
                                  </object>
                                </child>
                              </object>
                            </child>
                          </object>
                        </child>
                        
                        <!-- Settings Group (initially hidden) -->
                        <child>
                          <object class="GtkBox" id="live_wallpaper_options">
                            <property name="orientation">vertical</property>
                            <property name="spacing">6</property>
                            <property name="sensitive">false</property>
                            
                            <!-- Sources Selection -->
                            <child>
                              <object class="AdwPreferencesGroup" id="wallpaper_sources_group">
                                <property name="title" translatable="yes">Wallpaper Sources</property>
                                <property name="description" translatable="yes">Choose which sources to use for daily wallpapers</property>
                                
                                <!-- Dynamic source rows will be added here programmatically -->
                                
                              </object>
                            </child>
                            
                            <!-- Shuffle Interval -->
                            <child>
                              <object class="AdwPreferencesGroup" id="update_frequency_group">
                                <property name="title" translatable="yes">Update Frequency</property>
                                
                                <child>
                                  <object class="AdwActionRow">
                                    <property name="title" translatable="yes">Cycle Interval</property>
                                    <property name="subtitle" translatable="yes">How often to switch between sources (if multiple selected)</property>
                                    <child type="suffix">
                                      <object class="GtkBox">
                                        <property name="orientation">horizontal</property>
                                        <property name="spacing">6</property>
                                        <property name="valign">center</property>
                                        
                                        <child>
                                          <object class="GtkSpinButton" id="shuffle_interval_spin">
                                            <property name="adjustment">
                                              <object class="GtkAdjustment">
                                                <property name="lower">5</property>
                                                <property name="upper">1440</property>
                                                <property name="value">30</property>
                                                <property name="step-increment">5</property>
                                                <property name="page-increment">30</property>
                                              </object>
                                            </property>
                                            <property name="valign">center</property>
                                          </object>
                                        </child>
                                        
                                        <child>
                                          <object class="GtkLabel">
                                            <property name="label" translatable="yes">minutes</property>
                                            <style>
                                              <class name="dim-label"/>
                                            </style>
                                          </object>
                                        </child>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                              </object>
                            </child>
                            
                            <!-- Update Now Button -->
                            <child>
                              <object class="AdwPreferencesGroup">
                                <child>
                                  <object class="GtkBox">
                                    <property name="orientation">horizontal</property>
                                    <property name="halign">center</property>
                                    <property name="spacing">12</property>
                                    <property name="margin-top">12</property>
                                    
                                    <child>
                                      <object class="GtkButton" id="update_now_button">
                                        <property name="label" translatable="yes">Update Now</property>
                                        <style>
                                          <class name="suggested-action"/>
                                        </style>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </property>
                  </object>
                </property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>