<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="adw" version="1.0"/>
  <template class="LayoutPage" parent="AdwPreferencesPage">
    <property name="title">Layout</property>
    <property name="icon-name">view-paged-symbolic</property>
    <child>
      <object class="AdwPreferencesGroup">
        <child>
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <property name="spacing">16</property>
            <property name="margin-top">16</property>
            <property name="margin-bottom">16</property>
            <property name="margin-start">12</property>
            <property name="margin-end">12</property>
            <property name="hexpand">true</property>
            
            <!-- Title and description -->
            <child>
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="spacing">8</property>
                <child>
                  <object class="GtkLabel" id="title_label">
                    <property name="label">Choose Your Desktop Layout</property>
                    <property name="halign">center</property>
                    <style>
                      <class name="title-1"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="subtitle_label">
                    <property name="label">Select a desktop layout that suits your workflow. You can change this anytime later.</property>
                    <property name="halign">center</property>
                    <property name="wrap">true</property>
                    <property name="max-width-chars">60</property>
                    <style>
                      <class name="subtitle"/>
                      <class name="dim-label"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
            
            <!-- Layouts container with scroll -->
            <child>
              <object class="GtkScrolledWindow" id="layouts_scroll">
                <property name="vexpand">true</property>
                <property name="hexpand">true</property>
                <property name="hscrollbar-policy">never</property>
                <property name="vscrollbar-policy">automatic</property>
                <property name="min-content-height">350</property>
                <property name="max-content-height">500</property>
                <child>
                  <object class="GtkBox">
                    <property name="orientation">vertical</property>
                    <property name="spacing">8</property>
                    <property name="margin-top">8</property>
                    <property name="margin-bottom">8</property>
                    <property name="margin-start">8</property>
                    <property name="margin-end">8</property>
                    <property name="hexpand">true</property>
                    
                    <!-- Simple 2x3 Grid Layout -->
                    <child>
                      <object class="GtkGrid" id="layouts_grid">
                        <property name="valign">center</property>
                        <property name="halign">center</property>
                        <property name="row-spacing">20</property>
                        <property name="column-spacing">20</property>
                        <property name="row-homogeneous">true</property>
                        <property name="column-homogeneous">true</property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface> 