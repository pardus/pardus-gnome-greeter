<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="WelcomePage" parent="AdwPreferencesPage">
    <property name="title" translatable="yes">Welcome</property>
    <property name="icon-name">go-home-symbolic</property>
    <child>
      <object class="AdwPreferencesGroup">
        <child>
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <property name="halign">center</property>
            <property name="valign">center</property>
            <property name="vexpand">true</property>
            <property name="hexpand">true</property>
            <property name="spacing">12</property>
            <property name="margin-top">24</property>
            <property name="margin-bottom">24</property>
            <property name="margin-start">24</property>
            <property name="margin-end">24</property>
            <style>
              <class name="welcome-container"/>
            </style>
            <child>
              <object class="GtkPicture" id="welcome_banner">
                <property name="hexpand">true</property>
                <property name="margin-bottom">12</property>
                <property name="content-fit">contain</property>
                <style>
                  <class name="welcome-banner"/>
                </style>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="welcome_title">
                <property name="wrap">true</property>
                <property name="justify">center</property>
                <style>
                  <class name="title-1"/>
                </style>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="welcome_message">
                <property name="wrap">true</property>
                <property name="justify">center</property>
                <style>
                  <class name="title-3"/>
                  <class name="dim-label"/>
                </style>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="start_button">
                <property name="label" translatable="yes">Let's Start</property>
                <property name="halign">center</property>
                <property name="margin-top">12</property>
                <style>
                  <class name="suggested-action"/>
                  <class name="rounded-12"/>
                  <class name="wide-button"/>
                </style>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface> 