<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="WelcomePage" parent="AdwPreferencesPage">
    <property name="title" translatable="yes">Welcome</property>
    <property name="icon-name">image-x-generic-symbolic</property>
    <child>
      <object class="AdwPreferencesGroup">
        <child>
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <property name="halign">fill</property>
            <property name="valign">center</property>
            <property name="vexpand">true</property>
            <property name="spacing">24</property>
            <child>
              <object class="GtkPicture" id="welcome_banner">
                <property name="hexpand">true</property>
                <property name="can-shrink">true</property>
                <property name="keep-aspect-ratio">true</property>
                <property name="content-fit">contain</property>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="welcome_message">
                <property name="label" translatable="yes">Welcome to Pardus GNOME Greeter! This application will help you configure your Pardus GNOME experience.</property>
                <property name="wrap">true</property>
                <property name="justify">center</property>
                <attributes>
                  <attribute name="weight" value="bold"></attribute>
                  <attribute name="scale" value="1.2"></attribute>
                </attributes>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface> 