<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0" />
  <requires lib="adw" version="1.0" />
  
  <template class="PardusWallpaperPreviewDialog" parent="AdwDialog">
    <property name="title" translatable="yes">Wallpaper Preview</property>
    <property name="content-width">600</property>
    <property name="content-height">500</property>
    <property name="follows-content-size">false</property>
    
    <child>
      <object class="AdwToolbarView">
        <!-- Header Bar -->
        <child type="top">
          <object class="AdwHeaderBar" id="header_bar">
            <property name="show-end-title-buttons">true</property>
            <property name="show-start-title-buttons">false</property>
            <property name="title-widget">
              <object class="AdwWindowTitle" id="window_title">
                <property name="title" translatable="yes">Wallpaper Preview</property>
                <property name="subtitle">Loading...</property>
              </object>
            </property>
            
            <!-- Set as Wallpaper Button -->
            <child type="start">
              <object class="GtkButton" id="set_wallpaper_button">
                <property name="icon-name">media-playback-start-symbolic</property>
                <property name="tooltip-text" translatable="yes">Set as wallpaper</property>
                <property name="sensitive">true</property>
                <style>
                  <class name="suggested-action" />
                </style>
              </object>
            </child>
          </object>
        </child>
        
        <!-- Main Content -->
        <child>
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <property name="spacing">0</property>
            <property name="hexpand">true</property>
            <property name="vexpand">true</property>
            
            <!-- Preview Image Container -->
            <child>
              <object class="GtkScrolledWindow">
                <property name="hscrollbar-policy">automatic</property>
                <property name="vscrollbar-policy">automatic</property>
                <property name="hexpand">true</property>
                <property name="vexpand">true</property>
                <property name="margin-top">12</property>
                <property name="margin-bottom">12</property>
                <property name="margin-start">12</property>
                <property name="margin-end">12</property>
                
                <child>
                  <object class="GtkBox">
                    <property name="orientation">vertical</property>
                    <property name="halign">center</property>
                    <property name="valign">center</property>
                    <property name="spacing">12</property>
                    
                    <!-- Loading Spinner -->
                    <child>
                      <object class="GtkSpinner" id="loading_spinner">
                        <property name="spinning">true</property>
                        <property name="width-request">48</property>
                        <property name="height-request">48</property>
                        <property name="halign">center</property>
                        <property name="valign">center</property>
                        <style>
                          <class name="loading-spinner" />
                        </style>
                      </object>
                    </child>
                    
                    <!-- Preview Image -->
                    <child>
                      <object class="GtkPicture" id="preview_image">
                        <property name="can-shrink">true</property>
                        <property name="keep-aspect-ratio">true</property>
                        <property name="content-fit">contain</property>
                        <property name="halign">center</property>
                        <property name="valign">center</property>
                        <property name="visible">false</property>
                        <style>
                          <class name="preview-image-large" />
                        </style>
                      </object>
                    </child>
                    
                    <!-- Error Message -->
                    <child>
                      <object class="GtkBox" id="error_container">
                        <property name="orientation">vertical</property>
                        <property name="spacing">12</property>
                        <property name="halign">center</property>
                        <property name="valign">center</property>
                        <property name="visible">false</property>
                        
                        <child>
                          <object class="GtkImage">
                            <property name="icon-name">dialog-error-symbolic</property>
                            <property name="pixel-size">48</property>
                            <style>
                              <class name="error-icon" />
                            </style>
                          </object>
                        </child>
                        
                        <child>
                          <object class="GtkLabel" id="error_label">
                            <property name="label" translatable="yes">Failed to load wallpaper preview</property>
                            <property name="wrap">true</property>
                            <property name="justify">center</property>
                            <style>
                              <class name="title-4" />
                              <class name="error-text" />
                            </style>
                          </object>
                        </child>
                        
                        <child>
                          <object class="GtkButton" id="retry_button">
                            <property name="label" translatable="yes">Retry</property>
                            <property name="halign">center</property>
                            <style>
                              <class name="pill" />
                            </style>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
            
            <!-- Info Panel -->
            <child>
              <object class="GtkBox" id="info_panel">
                <property name="orientation">vertical</property>
                <property name="spacing">8</property>
                <property name="margin-top">0</property>
                <property name="margin-bottom">12</property>
                <property name="margin-start">12</property>
                <property name="margin-end">12</property>
                <style>
                  <class name="info-panel" />
                </style>
                
                <!-- Wallpaper Title -->
                <child>
                  <object class="GtkLabel" id="wallpaper_title">
                    <property name="label">Wallpaper Title</property>
                    <property name="halign">start</property>
                    <property name="wrap">true</property>
                    <property name="ellipsize">end</property>
                    <style>
                      <class name="title-3" />
                    </style>
                  </object>
                </child>
                
                <!-- Wallpaper Description -->
                <child>
                  <object class="GtkLabel" id="wallpaper_description">
                    <property name="label">Wallpaper description and details</property>
                    <property name="halign">start</property>
                    <property name="wrap">true</property>
                    <property name="lines">3</property>
                    <property name="ellipsize">end</property>
                    <style>
                      <class name="body" />
                      <class name="dim-label" />
                    </style>
                  </object>
                </child>
                
                <!-- Metadata Row -->
                <child>
                  <object class="GtkBox">
                    <property name="orientation">horizontal</property>
                    <property name="spacing">16</property>
                    <property name="margin-top">4</property>
                    
                    <!-- Source Info -->
                    <child>
                      <object class="GtkBox">
                        <property name="orientation">horizontal</property>
                        <property name="spacing">6</property>
                        
                        <child>
                          <object class="GtkImage">
                            <property name="icon-name">web-browser-symbolic</property>
                            <property name="pixel-size">16</property>
                            <style>
                              <class name="dim-label" />
                            </style>
                          </object>
                        </child>
                        
                        <child>
                          <object class="GtkLabel" id="source_label">
                            <property name="label">Source</property>
                            <style>
                              <class name="caption" />
                              <class name="dim-label" />
                            </style>
                          </object>
                        </child>
                      </object>
                    </child>
                    
                    <!-- Date Info -->
                    <child>
                      <object class="GtkBox">
                        <property name="orientation">horizontal</property>
                        <property name="spacing">6</property>
                        
                        <child>
                          <object class="GtkImage">
                            <property name="icon-name">x-office-calendar-symbolic</property>
                            <property name="pixel-size">16</property>
                            <style>
                              <class name="dim-label" />
                            </style>
                          </object>
                        </child>
                        
                        <child>
                          <object class="GtkLabel" id="date_label">
                            <property name="label">Today</property>
                            <style>
                              <class name="caption" />
                              <class name="dim-label" />
                            </style>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>