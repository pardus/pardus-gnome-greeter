<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="DisplayPage" parent="AdwPreferencesPage">
    <property name="title" translatable="yes">Display</property>
    <property name="icon-name">video-display-symbolic</property>
    <child>
      <object class="GtkScrolledWindow">
        <property name="hscrollbar-policy">never</property>
        <property name="vscrollbar-policy">automatic</property>
        <child>
          <object class="AdwClamp">
            <property name="maximum-size">800</property>
            <property name="tightening-threshold">600</property>
            <property name="margin-top">0</property>
            <child>
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="margin-bottom">24</property>
                <property name="margin-start">24</property>
                <property name="margin-end">24</property>
                <child>
                  <object class="AdwPreferencesGroup">
                    <property name="title" translatable="yes">Interface Scaling</property>
                    <child>
                      <object class="AdwComboRow" id="cursor_size_row">
                        <property name="title" translatable="yes">Cursor Size</property>
                        <property name="model">
                          <object class="GtkStringList">
                            <items>
                              <item translatable="yes">Small</item>
                              <item translatable="yes">Medium</item>
                              <item translatable="yes">Large</item>
                            </items>
                          </object>
                        </property>
                      </object>
                    </child>
                    <child>
                      <object class="AdwComboRow" id="file_manager_icon_size_row">
                        <property name="title" translatable="yes">File Manager Icon Size</property>
                        <property name="model">
                          <object class="GtkStringList">
                            <items>
                              <item translatable="yes">Small</item>
                              <item translatable="yes">Standard</item>
                              <item translatable="yes">Large</item>
                            </items>
                          </object>
                        </property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface> 