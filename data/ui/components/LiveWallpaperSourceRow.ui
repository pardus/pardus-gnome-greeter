<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0" />
  <requires lib="adw" version="1.0" />
  <template class="PardusLiveWallpaperSourceRow" parent="AdwActionRow">
    <property name="height-request">60</property>
    <style>
      <class name="live-wallpaper-source-row" />
    </style>

    <!-- Checkbox and Preview -->
    <child type="prefix">
      <object class="GtkBox">
        <property name="orientation">horizontal</property>
        <property name="spacing">8</property>
        <property name="valign">center</property>
        <property name="hexpand">false</property>

        <!-- Source Checkbox -->
        <child>
          <object class="GtkCheckButton" id="source_checkbox">
            <property name="valign">center</property>
            <property name="margin-end">4</property>
          </object>
        </child>

        <!-- Preview Container -->
        <child>
          <object class="GtkBox" id="preview_container">
            <property name="orientation">vertical</property>
            <property name="width-request">60</property>
            <property name="height-request">40</property>
            <property name="valign">center</property>
            <property name="overflow">hidden</property>
            <style>
              <class name="preview-container" />
            </style>
            <child>
              <object class="GtkImage" id="preview_image">
                <property name="pixel-size">60</property>
                <property name="hexpand">false</property>
                <property name="vexpand">false</property>
                <style>
                  <class name="preview-image" />
                </style>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>

    <!-- Status and Action -->
    <child type="suffix">
      <object class="GtkBox">
        <property name="orientation">horizontal</property>
        <property name="spacing">8</property>
        <property name="valign">center</property>
        <property name="hexpand">false</property>

        <!-- Download Button -->
        <child>
          <object class="GtkButton" id="download_button_row">
            <property name="icon-name">folder-download-symbolic</property>
            <property name="tooltip-text" translatable="yes">Download wallpaper</property>
            <property name="valign">center</property>
            <property name="width-request">32</property>
            <property name="height-request">32</property>
            <style>
              <class name="flat" />
              <class name="circular" />
              <class name="download-button" />
            </style>
          </object>
        </child>

        <!-- Preview Button -->
        <child>
          <object class="GtkButton" id="preview_button">
            <property name="icon-name">system-search-symbolic</property>
            <property name="tooltip-text" translatable="yes">Preview wallpaper</property>
            <property name="valign">center</property>
            <property name="width-request">32</property>
            <property name="height-request">32</property>
            <style>
              <class name="flat" />
              <class name="circular" />
              <class name="preview-button" />
            </style>
          </object>
        </child>

        <!-- Action Button -->
        <child>
          <object class="GtkButton" id="action_button">
            <property name="icon-name">folder-download-symbolic</property>
            <property name="tooltip-text" translatable="yes">Download wallpaper</property>
            <property name="valign">center</property>
            <property name="width-request">32</property>
            <property name="height-request">32</property>
            <style>
              <class name="flat" />
              <class name="circular" />
              <class name="action-button" />
            </style>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>