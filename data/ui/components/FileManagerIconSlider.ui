<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="FileManagerIconSlider" parent="AdwActionRow">
    <property name="title" translatable="yes">File Manager Icon Size</property>
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <property name="spacing">8</property>
        <property name="hexpand">true</property>
        <child>
          <object class="GtkScale" id="file_manager_icon_scale">
            <property name="value-pos">bottom</property>
            <property name="digits">0</property>
            <property name="round-digits">0</property>
            <property name="has-origin">true</property>
            <property name="draw-value">false</property>
            <property name="show-fill-level">true</property>
            <property name="restrict-to-fill-level">false</property>
            <property name="fill-level">2</property>
            <property name="hexpand">true</property>
            <property name="adjustment">
              <object class="GtkAdjustment">
                <property name="lower">0</property>
                <property name="upper">4</property>
                <property name="value">2</property>
                <property name="step-increment">1</property>
                <property name="page-increment">1</property>
              </object>
            </property>
            <style>
              <class name="modern-slider"/>
            </style>
          </object>
        </child>
        <child>
          <object class="GtkBox" id="labels_box">
            <property name="orientation">horizontal</property>
            <property name="hexpand">true</property>
            <property name="spacing">0</property>
            <style>
              <class name="slider-labels"/>
            </style>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface> 