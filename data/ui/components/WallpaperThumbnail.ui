<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0" />
  <requires lib="adw" version="1.0" />
  <template class="WallpaperThumbnail" parent="GtkBox">
    <property name="orientation">vertical</property>
    <property name="spacing">0</property>
    <property name="width-request">160</property>
    <property name="height-request">120</property>
    
    <!-- Simple picture with checkmark overlay -->
    <child>
      <object class="GtkOverlay">
        <property name="overflow">hidden</property>
        
        <!-- Background Picture -->
        <child>
          <object class="GtkPicture" id="picture">
            <property name="halign">fill</property>
            <property name="valign">fill</property>
            <property name="can-shrink">false</property>
            <property name="keep-aspect-ratio">false</property>
            <property name="content-fit">cover</property>
            <style>
              <class name="background-thumbnail"/>
            </style>
          </object>
        </child>
        
        <!-- Selected Checkmark -->
        <child type="overlay">
          <object class="GtkImage" id="selected_check">
            <property name="halign">end</property>
            <property name="valign">start</property>
            <property name="icon-name">object-select-symbolic</property>
            <style>
              <class name="selected-check"/>
            </style>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface> 